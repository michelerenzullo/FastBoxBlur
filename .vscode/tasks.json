{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    "\"C:/Program Files/Microsoft Visual Studio/2022/Community/Common7/Tools/VsDevCmd.bat\"",
                    "&& "
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/O2",
                "/Ot",
                "/openmp:experimental",
                "/MT",
                "/std:c++20",
                "/nologo",
                "/Fo${workspaceFolder}/build/",
                "/Fd${workspaceFolder}/build/",
                "/Fe${workspaceFolder}/build/fastboxblur.exe",
                "${workspaceFolder}/fastboxblur.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
                
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++",
            "command": "C:\\TDM-GCC-64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-m64",
                "-fopenmp",
                "-O3",
                "-std=c++2a",
                "${workspaceFolder}/fastboxblur.cpp",
                "-o",
                "${workspaceFolder}/build/fastboxblur.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}